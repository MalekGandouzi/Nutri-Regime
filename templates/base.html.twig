{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}NutriRegime
			{% endblock %}
		</title>

		{# Bootstrap 5 #}
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

		{# Bootstrap Icons #}
		<link
		rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

		{# Google Font #}
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap">

		<style>:root
		{
			--nutri-green: #38b000;
			--nutri-green-soft: #a7f3d0;
			--nutri-yellow: #ffd166;
			--nutri-bg: #f7f9fb;
		}

		body {
			font-family: "Poppins", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
			background: var(--nutri-bg);
			min-height: 100vh;
		}

		.nutri-navbar {
			backdrop-filter: blur(10px);
			background: rgba(255, 255, 255, 0.9);
			box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
		}

		.nutri-logo {
			font-weight: 700;
			letter-spacing: 0.04em;
		}

		.nutri-logo span {
			color: var(--nutri-green);
		}

		.hero-banner {
			position: relative;
			border-radius: 24px;
			overflow: hidden;
			background: linear-gradient(120deg, #c8ffb5, #ffe29f);
		}

		.hero-banner::before {
			content: "";
			position: absolute;
			inset: 0;
			background-image: url("https://images.unsplash.com/photo-1512621776951-a57141f2eefd?auto=format&fit=crop&w=1400&q=80");
			opacity: 0.25;
			background-size: cover;
			background-position: center;
			filter: saturate(1.2);
		}

		.hero-content {
			position: relative;
			z-index: 2;
		}

		.nutri-pill {
			display: inline-flex;
			align-items: center;
			gap: 0.4rem;
			padding: 0.25rem 0.8rem;
			border-radius: 999px;
			background: rgba(255, 255, 255, 0.9);
			font-size: 0.8rem;
		}

		.nutri-card {
			border: none;
			border-radius: 18px;
			box-shadow: 0 12px 30px rgba(0, 0, 0, 0.06);
			background: #ffffff;
		}

		.nutri-card-header {
			border-bottom: none;
			background: linear-gradient(135deg, #e0ffef, #fffdf2);
			border-radius: 18px 18px 0 0 !important;
		}

		.nutri-badge {
			border-radius: 999px;
			font-size: 0.8rem;
			padding: 0.2rem 0.8rem;
		}

		.nutri-type {
			background: rgba(56, 176, 0, 0.08);
			color: #166534;
		}

		.nutri-duration {
			background: rgba(59, 130, 246, 0.08);
			color: #1d4ed8;
		}

		footer {
			font-size: 0.8rem;
			opacity: 0.8;
		}

		a {
			text-decoration: none;
		}

		a:hover {
			text-decoration: none;
		}

		.btn-nutri-main {
			background: var(--nutri-green);
			border-color: var(--nutri-green);
			color: #fff;
		}

		.btn-nutri-main:hover {
			background: #2b8700;
			border-color: #2b8700;
			color: #fff;
		}
	</style>

	{% block stylesheets %}{% endblock %}
</head>
<body>

	{% if app.request.get('_route') != 'app_login' %}
		{% include 'partials/_navbar.html.twig' %}
	{% endif %}


	<main class="py-4"> {% block body %}{% endblock %}
		</main>

		<footer class="text-center text-muted py-3">
			<i class="bi bi-heart-pulse-fill text-danger"></i>
			<span class="ms-1">
				NutriRegime ‚Äì manger mieux, vivre mieux üçè</span>
		</footer>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
		{% block javascripts %}{% endblock %}
	</body>
</html>
